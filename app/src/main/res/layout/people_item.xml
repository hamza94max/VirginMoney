<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="7dp"
    android:layout_marginTop="7dp"
    app:cardCornerRadius="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/avaterimg"
            android:layout_width="165dp"
            android:layout_height="270dp"
            android:contentDescription="avatar"
            android:padding="7dp" />

        <TextView
            android:id="@+id/firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avaterimg"
            android:padding="7dp"
            android:text="firstName"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_margin="7dp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avaterimg"
            android:layout_below="@id/firstname"
            android:padding="7dp"
            android:text="email : "
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_margin="7dp"/>

        <TextView
            android:id="@+id/jobtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avaterimg"
            android:layout_below="@id/email"
            android:padding="7dp"
            android:text="jobtitle : "
            android:textSize="21sp"
            android:layout_margin="7dp"/>

        <TextView
            android:id="@+id/favouriteColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobtitle"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:layout_toEndOf="@id/avaterimg"
            android:padding="7dp"
            android:text="favouriteColor : "
            android:textSize="21sp" />

        <TextView
            android:id="@+id/createdAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avaterimg"
            android:layout_below="@id/favouriteColor"
            android:padding="7dp"
            android:text="createdAt : "
            android:textSize="21sp"
            android:layout_margin="7dp"/>





    </RelativeLayout>


</androidx.cardview.widget.CardView>